{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "module": "commonjs",
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts",
    "config.ts/*",
    "scripts",
    "eslint.config.ts",
    "migrations/*.js"
  ],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
