{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "module": "CommonJS",
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts",
    "eslint.config.mjs",
    "migrations/*.js",
    "jest.config.ts",
    "config.ts"
  ],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
